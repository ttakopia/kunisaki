<section class="port">
<p>
  <h3><%= @picture.name %></h3><hr>
</p>
<p><%= simple_format @picture.content %></p><hr>

<div class="boxA">
<%= render 'address' %>
</div>

<div class="boxB">
<%= render 'map' %>
</div>

<div class="boxC">
<p><h4>【写真】<h4></p>

<ul>
    <% @picture.assets.each do |pic| %>
     <a><%= image_tag pic.image.url %></a>
     <%= link_to "Destroy", [@picture, pic], :confirm => 'Are you sure?', :method => :delete %> 
  <% end %>
</ul>
</div>
</section>

